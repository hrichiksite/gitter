{{!-- NOTE: this is wrapped by <div class='chat-item'> --}}
<div class='chat-item__container chat-item__status'>
  <div class='chat-item__aside'>

  </div>
  <div class="chat-item__actions js-chat-item-actions">
    <i class="chat-item__icon icon-ellipsis"></i>
  </div>
  <div class='chat-item__content'>
    {{#if initial}}
      {{! This is a way of forcing the browser to open at the bottom of the screen }}
      <div id='initial' style="position:relative;top:-120px; left: 0; height:0;width:0;overflow:hidden"><a name="initial"/>_</a></div>
    {{/if}}
    <div class='chat-item__details'>
      <div class='chat-item__text js-chat-item-text'>{{username}} {{{ html}}}</div>
    </div>
  </div>
</div>
